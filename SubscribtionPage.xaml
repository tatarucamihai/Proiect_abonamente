<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Proiect_abonamente.Views"
             x:Class="Proiect_abonamente.SubscribtionPage"
             Title="SubscribtionPage">

    <ContentPage.BindingContext>
        <local:SubscriptionView />
    </ContentPage.BindingContext>

    <StackLayout Margin="20">
        <!-- Display the fixed subscription type -->
        <Label Text="Abonament lunar" FontSize="18" />

        <!-- Grid for buttons -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Button for save -->
            <Button Text="Save" Clicked="OnSaveButtonClicked" />

            <!-- Button for delete -->
            <Button Grid.Column="1" Text="Delete" Clicked="OnDeleteButtonClicked"/>
        </Grid>
    </StackLayout>
</ContentPage>
