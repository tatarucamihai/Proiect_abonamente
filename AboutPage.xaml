<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proiect_abonamente.AboutPage"
             Title="AboutPage">
    <VerticalStackLayout Spacing="10" Margin="10">
        <HorizontalStackLayout Spacing="10">
            <Label FontSize="22" FontAttributes="Bold" Text="Abonamentele la cea mai exclusivista sala" VerticalOptions="End" />
            
            <Label x:Name="emailLabel"  FontSize="18" VerticalOptions="CenterAndExpand" HorizontalOptions="Center" />
        </HorizontalStackLayout>
        <Image Source="poza.jpg"
               SemanticProperties.Description="Abonamentele la cea mai exclusivista sala!"
               HeightRequest="500" 
               HorizontalOptions="FillAndExpand"
               Aspect="AspectFit" />
        <Label Text="Deschide-ti un abonament la sala noastra!" />
    </VerticalStackLayout>
</ContentPage>