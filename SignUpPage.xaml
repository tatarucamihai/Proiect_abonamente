<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proiect_abonamente.SignUpPage"
             Title="SignUpPage">

    <StackLayout>
        <Entry x:Name="firstNameEntry" Placeholder="First Name" />
        <Entry x:Name="lastNameEntry" Placeholder="Last Name" />
        <Entry x:Name="ageEntry" Placeholder="Age" />
        <Entry x:Name="emailEntry" Placeholder="Email" />
        <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="True" />
        <Button Text="Register" FontAttributes="Bold" TextColor="White" Margin="0,20" HeightRequest="50" CornerRadius="10" BackgroundColor="#508390" Clicked="OnRegisterButtonClicked"/>


        <StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <Label Text="Already registered? " TextColor="#aaaaaa" />
            <Button Text="Sign in" Clicked="OnSignInLabelClicked" />
        </StackLayout>



    </StackLayout>
</ContentPage>
