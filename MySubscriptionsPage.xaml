

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Proiect_abonamente.Views"
             x:Class="Proiect_abonamente.MySubscriptionsPage"
             Title="My Subscriptions">

    <StackLayout>
       
        <ListView x:Name="subscriptionsListView" ItemsSource="{Binding Subscriptions}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Descriere}" Detail="{Binding Data}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
